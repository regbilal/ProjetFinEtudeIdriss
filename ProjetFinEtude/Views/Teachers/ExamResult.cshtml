@model ExamViewModel
@{
    ViewData["Title"] = "Exam Result";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

<h2>Select Exam</h2>
<hr />

<div class="row">
    <div class="col-md-7">
        <form asp-action="AddExamResult" method="get">
            <div class="card shadow mb-4">
                <div class="card-header text-primary">
                    <h6>
                        Select Exam
                    </h6>
                </div>
                <input type="hidden" asp-for="SubjectId" />
                <div class="card-body">
                    <div class="form-group">
                        <h6>Class - Subject</h6>
                        <p class="lead">@Model.Subject.Class.Name -  @Model.Subject.SubjectDetails.Name </p>
                    </div>
                    <div class="form-group">
                        <label for=""></label>
                        <select asp-for="ExamId" asp-items="@Model.ExamList" name="id" class="form-control" required>
                            <option value="" selected disabled>---Select Exam---</option>
                        </select>
                        <span class="text-danger" asp-validation-for="ExamId"></span>
                    </div>
                </div>
                <div class="card-footer text-muted">
                    <input type="submit" class="btn btn-primary" value="Next" />
                    <a class="btn btn-outline-secondary" asp-action="Courses" asp-controller="Teachers">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

