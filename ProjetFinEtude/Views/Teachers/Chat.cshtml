@model Chat
@{
    ViewData["Title"] = "Chat";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

<h2>New Message</h2>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Chat">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Send Message</h6>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Message" class="control-label"></label>
                        <textarea asp-for="Message" class="form-control" role="6"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ToId" class="control-label"></label>
                        <select asp-for="ToId" class="form-control" asp-items="@ViewBag.userToList">
                            <option disabled selected>---select user---</option>
                        </select>
                        <input type="hidden" asp-for="FromId" value="@ViewBag.userId" />
                        <span asp-validation-for="FromId" class="text-danger"></span>
                    </div>

                </div>
                <div class="card-footer text-muted">
                    <button type="submit" class="btn btn-success">Send</button>
                    <a asp-action="ShowChat" class="btn btn-outline-secondary">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/lib/select2/js/select2.min.js"></script>
    <script>
        $("#ToId").select2();
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
