
@model Quiz
@{
    ViewData["Title"] = "Add Exam";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}


<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h3 class="h3 mb-0 text-gray-800">Add Exam</h3>
</div>
<hr />
<div class="row">
    <div class="col-md-6">
        <!-- DataTales Example -->
        <form asp-action="Create" method="post">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        Add Exam
                    </h6>
                </div>
                <div class="card-body">

                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" maxlength="50"
                               class="form-control" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Mark"></label>
                        <input asp-for="Mark" max="100" min="0" class="form-control" required />
                        <span asp-validation-for="Mark" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Date"></label>
                        <input asp-for="Date" type="date" class="form-control" required />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SubjectId"></label>
                        <select class="form-control"
                                asp-for="SubjectId"
                                asp-items="@ViewBag.subjectList" required>
                            <option disabled selected>---Select Course---</option>
                        </select>
                        <span asp-validation-for="SubjectId" class="text-danger"></span>
                    </div>

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </div>
                <div class="card-footer text-muted">
                    <input type="submit" value="Add" class="btn btn-primary" />
                    <a asp-action="Index"
                       class="btn btn-outline-secondary">Back</a>
                </div>
            </div>
        </form>
    </div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
