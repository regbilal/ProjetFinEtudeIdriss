
@model UserProfileViewModel
@{
    ViewData["Title"] = "ViewStudent";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}


<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h3 class="h3 mb-0 text-gray-800">View Student Details</h3>
</div>



<!-- DataTales Example -->
<div class="row">
    <div class="col-md-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-wrap justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">
                    Student Details | @Model.UserName
                </h6>
            </div>
            <div class="card-body">
                <div class="card shadow mb-4">
                    <!-- Card Header - Accordion account -->
                    <a href="#collapseCardExample" class="d-block card-header py-3" data-toggle="collapse" role="button" aria-expanded="true" aria-controls="collapseCardExample">
                        <h6 class="m-0 font-weight-bold text-primary">Account Details</h6>
                    </a>
                    <!-- Card Content - Collapse -->
                    <div class="collapse show" id="collapseCardExample" style="">
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-2">
                                    Username
                                </dt>
                                <dd class="col-sm-10">
                                    @Model.UserName
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
                <!--profile-->
                <div class="card shadow mb-4">
                    <!-- Card Header - Accordion -->
                    <a href="#collapseCardExample2" class="d-block card-header py-3" data-toggle="collapse" role="button" aria-expanded="true" aria-controls="collapseCardExample">
                        <h6 class="m-0 font-weight-bold text-primary">Student Details</h6>
                    </a>
                    <!-- Card Content - Collapse -->
                    <div class="collapse show" id="collapseCardExample2" style="">
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-2">
                                    National Id
                                </dt>
                                <dd class="col-sm-10">
                                    @Model.NationalId
                                </dd>
                                <dt class="col-sm-2">
                                    First Name
                                </dt>
                                <dd class="col-sm-10">
                                    @Model.FirstName
                                </dd>
                                <dt class="col-sm-2">
                                    Mid Name
                                </dt>
                                <dd class="col-sm-10">
                                    @Model.MidName
                                </dd>
                                <dt class="col-sm-2">
                                    Last Name
                                </dt>
                                <dd class="col-sm-10">
                                    @Model.LastName
                                </dd>
                                <dt class="col-sm-2">
                                    Gender
                                </dt>
                                <dd class="col-sm-10">
                                    @(Model.Gender=='M'?"Male":"Female")
                                </dd>
                                <dt class="col-sm-2">
                                    Date of Birth
                                </dt>
                                <dd class="col-sm-10">
                                    @Model.DateBirth.ToString("yyyy-MM-dd")
                                </dd>
                                <dt class="col-sm-2">
                                    Class
                                </dt>
                                <dd class="col-sm-10">
                                    @Model.Class.Name
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>


                @if (Model.ParentId != null)
                {
                    <!--Parent Information-->
                    <div class="card shadow mb-4">
                        <!-- Card Header - Accordion -->
                        <a href="#collapseCardExample4" class="d-block card-header py-3" data-toggle="collapse" role="button" aria-expanded="true" aria-controls="collapseCardExample">
                            <h6 class="m-0 font-weight-bold text-primary">Parent Details</h6>
                        </a>
                        <!-- Card Content - Collapse -->
                        <div class="collapse show" id="collapseCardExample4" style="">
                            <div class="card-body">
                                <dl class="row">
                                    <dt class="col-sm-2">
                                        National Id
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Model.Parent.NationalId
                                    </dd>
                                    <dt class="col-sm-2">
                                        Name
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Model.Parent.FirstName @Model.Parent.MidName @Model.Parent.LastName
                                    </dd>
                                    <dt class="col-sm-2">
                                        Date Of Birth
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Model.Parent.DateBirth.ToString("yyyy-MM-dd")
                                    </dd>
                                    <dt class="col-sm-2">
                                        Gender
                                    </dt>
                                    <dd class="col-sm-10">
                                        @(Model.Parent.Gender=='M'?"Male":"Female")
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <!--Parent Information-->
                    <div class="card shadow mb-4">
                        <!-- Card Header - Accordion -->
                        <a href="#collapseCardExample4" class="d-block card-header py-3" data-toggle="collapse" role="button" aria-expanded="true" aria-controls="collapseCardExample">
                            <h6 class="m-0 font-weight-bold text-primary">Parent Details</h6>
                        </a>
                        <!-- Card Content - Collapse -->
                        <div class="collapse show" id="collapseCardExample4" style="">
                            <div class="card-body">
                                <div class="alert alert-warning" role="alert">
                                    No Parent Information Found!
                                    <a asp-action="Create" asp-controller="Parents"
                                       class="">Add a Parent For Student?</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <!--Contact-->
                <div class="card shadow mb-4">
                    <!-- Card Header - Accordion -->
                    <a href="#collapseCardExample3" class="d-block card-header py-3" data-toggle="collapse" role="button" aria-expanded="true" aria-controls="collapseCardExample">
                        <h6 class="m-0 font-weight-bold text-primary">Student Contact Details</h6>
                    </a>
                    <!-- Card Content - Collapse -->
                    <div class="collapse show" id="collapseCardExample3" style="">
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-2">
                                    Address
                                </dt>
                                <dd class="col-sm-10">
                                    @Model.Address.Address1
                                </dd>
                                <dt class="col-sm-2">
                                    Additional Information
                                </dt>
                                <dd class="col-sm-10">
                                    @Model.Address.Address2 - @Model.Address.District - @Model.Address.Location
                                </dd>
                                <dt class="col-sm-2">
                                    Email
                                </dt>
                                <dd class="col-sm-10">
                                    @Model.Email
                                </dd>
                                <dt class="col-sm-2">
                                    Phone
                                </dt>
                                <dd class="col-sm-10">
                                    @Model.Phone
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>

            </div>
            <div class="card-footer text-muted">
                <a asp-action="EditStudent" asp-controller="Students"
                   asp-route-userId="@Model.UserId"
                   class="btn btn-primary">Edit</a>
                <a asp-action="AllStudents" asp-controller="Students"
                   class="btn btn-outline-secondary">Back</a>
            </div>
        </div>

    </div>
</div>


@section Scripts{


}


