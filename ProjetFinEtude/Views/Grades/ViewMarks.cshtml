@model AddGradeViewModel
@{
    ViewData["Title"] = "View Marks";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

<h2>View Marks</h2>
<hr />


<div class="row">
    <div class="col-xl-3 col-md-6 col-sm-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Class
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ClassName</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-graduation-cap fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 col-sm-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Subject Name
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.SubjectName</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-book fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @if (Model.ClassAvarage > 0)
    {
        <div class="col-xl-3 col-md-6 col-sm-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Course Avarage
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" style="font-size:30px">
                                <span> @Model.ClassAvarage</span>
                                @{
                                    var maxMark = 100;
                                    if (Model.ClassAvarage >= maxMark * 0.90)
                                    {
                                        <i class="fas fa-thermometer-full text-success"></i>
                                    }
                                    else if (maxMark * 0.84 <= Model.ClassAvarage)
                                    {
                                        <i class="fas fa-thermometer-three-quarters text-success"></i>
                                    }
                                    else if (maxMark * 0.84 > Model.ClassAvarage && maxMark * 0.70 <= Model.ClassAvarage)
                                    {
                                        <i class="fas fa-thermometer-half text-primary"></i>
                                    }
                                    else if (maxMark * 0.5 <= Model.ClassAvarage && maxMark * 0.70 > Model.ClassAvarage)
                                    {
                                        <i class="fas fa-thermometer-quarter text-warning"></i>
                                    }
                                    else if (maxMark * 0.5 > Model.ClassAvarage)
                                    {
                                        <i class="fas fa-thermometer-empty text-danger"></i>
                                    }
                                }
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-tachometer-alt fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }
</div>


<div class="row">
    <div class="col-md-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-wrap justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">
                    Give Marks
                </h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th scope="col">Student</th>
                                <th scope="col">Activity</th>
                                <th scope="col">First Mark</th>
                                <th scope="col">Mid Mark</th>
                                <th scope="col">Final Mark</th>
                                <th scope="col">Total</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th scope="col">Avarage</th>
                                <th scope="col"></th>
                                <th scope="col">
                                    <span>@Model.FirstAvarage</span>
                                    @{
                                        var maxMark2 = 20;
                                        if (Model.FirstAvarage >= maxMark2 * 0.90)
                                        {
                                            <i class="fas fa-thermometer-full text-success"></i>
                                        }
                                        else if (maxMark2 * 0.84 <= Model.FirstAvarage)
                                        {
                                            <i class="fas fa-thermometer-three-quarters text-success"></i>
                                        }
                                        else if (maxMark2 * 0.84 > Model.FirstAvarage && maxMark2 * 0.70 <= Model.FirstAvarage)
                                        {
                                            <i class="fas fa-thermometer-half text-primary"></i>
                                        }
                                        else if (maxMark2 * 0.5 <= Model.FirstAvarage && maxMark2 * 0.70 > Model.FirstAvarage)
                                        {
                                            <i class="fas fa-thermometer-quarter text-warning"></i>
                                        }
                                        else if (maxMark2 * 0.5 > Model.FirstAvarage)
                                        {
                                            <i class="fas fa-thermometer-empty text-danger"></i>
                                        }
                                    }
                                </th>
                                <th scope="col">
                                    <span>@Model.MidAvarage</span>

                                    @{
                                        var maxMark3 = 20;
                                        if (Model.MidAvarage >= maxMark3 * 0.90)
                                        {
                                            <i class="fas fa-thermometer-full text-success"></i>
                                        }
                                        else if (maxMark3 * 0.84 <= Model.MidAvarage)
                                        {
                                            <i class="fas fa-thermometer-three-quarters text-success"></i>
                                        }
                                        else if (maxMark3 * 0.84 > Model.MidAvarage && maxMark3 * 0.70 <= Model.MidAvarage)
                                        {
                                            <i class="fas fa-thermometer-half text-primary"></i>
                                        }
                                        else if (maxMark3 * 0.5 <= Model.MidAvarage && maxMark3 * 0.70 > Model.MidAvarage)
                                        {
                                            <i class="fas fa-thermometer-quarter text-warning"></i>
                                        }
                                        else if (maxMark3 * 0.5 > Model.MidAvarage)
                                        {
                                            <i class="fas fa-thermometer-empty text-danger"></i>
                                        }
                                    }
                                </th>
                                <th scope="col">
                                    <span>@Model.FinalAvarage</span>
                                    @{
                                        var maxMark4 = 40;
                                        if (Model.FinalAvarage >= maxMark3 * 0.90)
                                        {
                                            <i class="fas fa-thermometer-full text-success"></i>
                                        }
                                        else if (maxMark4 * 0.84 <= Model.FinalAvarage)
                                        {
                                            <i class="fas fa-thermometer-three-quarters text-success"></i>
                                        }
                                        else if (maxMark4 * 0.84 > Model.FinalAvarage && maxMark4 * 0.70 <= Model.FinalAvarage)
                                        {
                                            <i class="fas fa-thermometer-half text-primary"></i>
                                        }
                                        else if (maxMark4 * 0.5 <= Model.FinalAvarage && maxMark4 * 0.70 > Model.FinalAvarage)
                                        {
                                            <i class="fas fa-thermometer-quarter text-warning"></i>
                                        }
                                        else if (maxMark4 * 0.5 > Model.FinalAvarage)
                                        {
                                            <i class="fas fa-thermometer-empty text-danger"></i>
                                        }
                                    }
                                </th>
                                <th scope="col"> </th>

                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model.StudentsGrades)
                            {
                                <tr>
                                    <td>@item.StudentName</td>
                                    <td>@item.ActivityMark</td>
                                    <td>@item.FirstMark</td>
                                    <td>@item.MidtMark</td>
                                    <td>@item.FinalMark</td>
                                    <td>@item.Total</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer text-muted">
                <a asp-action="Index" class="btn btn-secondary">Back</a>
            </div>

        </div>
    </div>
</div>

